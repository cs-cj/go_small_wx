page {
    height: 100%;
}
.container {
    box-sizing: border-box;
    height: 100%;
    font-family: "Helvetica Neue", "Hiragino Sans GB", "WenQuanYi Micro Hei", "Microsoft Yahei", sans-serif;
    font-size: 14px;
    color: #353535;
}
view,
scroll-view {
    box-sizing: border-box;
}
::-webkit-scrollbar {
    display: none;
}
.visibility-hidden {
    visibility: hidden;
}
.navbar {
    position: fixed;
    top: 0;
    z-index: 4;
    border-bottom: 1px solid #ececec;
    height: 90rpx;
    font-size: 16px;
    white-space: nowrap;
    background-color: #f5f6f7;
    padding: 0;
}
.navbar-item {
    display: inline-block; 
    /* width: calc(750rpx / 7); */
    margin: 0 30rpx;
    padding: 0;
    vertical-align:middle; 
    height:80rpx;
}
.navbar-item-active {
    font-size: 17px;
    color: #57bc72;
    border-bottom:2px solid #57bc72;
    height:80rpx;
}
.navbar-item-wrap {
    /* display: flex; */
    /* align-items: center;
    justify-content: center; */
    /* vertical-align: middle; */
    display: block;
    width: 100%;
    height:90rpx;
    line-height:90rpx;   
}
.navbar-arrow-down {
    display: flex;

    position: fixed;
    top: 0;
    right: 0;
    z-index: 5;
    width: calc(750rpx / 7);
    height: 88rpx;
    background-color: rgba(245, 246, 247, .9);
    align-items: center;
}
.navbar-arrow-down-wrap {
    display: flex;

    border-left: 1px solid #ececec;
    width: 100%;

    justify-content: center;
}
.navbar-arrow-icon {
    width: 16px;
    height: 16px;
}
.channel-setting {
    display: none;

    position: fixed;
    top: 0;
    z-index: 6;

    border-bottom: 1px solid #ececec;
    width: 100%;
    height: 90rpx;

    background-color: #f5f6f7;
}
.channel-setting-show {
    display: flex;

    align-items: center;
    justify-content: space-between;
}
.channel-setting-text {
    margin-left: 40rpx;

    font-size: 16px;
}
.navbar-arrow-up {
    display: flex;

    width: calc(750rpx / 7);
    height: 100%;

    align-items: center;
    justify-content: flex-end;
}
.navbar-arrow-icon-up {
    margin-right: 40rpx;
}
.channel-setting-modal {
    position: absolute;

    margin-top: -1000rpx;
    width: 100%;
    height: 1080rpx;
    min-height: calc(100% - 80rpx);

    background-color: #f3f3f3;

    transition: margin-top .5s;
}
.channel-setting-modal-show {
    margin-top: 80rpx;
}
.channel-show-text,
.channel-hide-text {
    display: flex;

    width: 100%;
    height: 60rpx;

    font-size: 12px;

    color: #888;

    justify-content: center;
}
.channel-show-text-wrap,
.channel-hide-text-wrap {
    display: flex;

    width: calc(100% - 80rpx);
    height: 100%;

    align-items: center;
}
.channel-item {
    display: flex;

    border-bottom: 1px solid #ececec;
    height: 80rpx;

    background-color: #fff;

    justify-content: center;
}
.channel-item-wrap {
    display: flex;

    width: calc(100% - 80rpx);
    height: 100%;

    align-items: center;
    justify-content: space-between;
}
.channel-item-left {
    display: flex;

    height: 100%;

    align-items: center;
    justify-content: space-between;
}
.channel-item-icon-minus {
    width: 22px;
    height: 22px;
}
.channel-item-icon-plus {
    width: 20px;
    height: 20px;
}
.channel-item-text {
    margin-left: 40rpx;
}
.channel-item-up {
    border: 1px solid #888;
    border-radius: 3px;
    padding: 2px 4px;

    font-size: 10px;

    color: #888;
}
